print(df_crh.head())  # Check if 'cluster' exists and is correct

# Create a FacetGrid to visualize each cluster type in its own graph
g = sns.FacetGrid(df_crh, col='cluster_type', col_wrap=3, height=4)

# Use map_dataframe to map scatterplot to the grid
g.map_dataframe(sns.scatterplot, x='RunningVMs', y='Hosts', hue='cluster', palette='tab10', s=100)

# Add titles, labels, and legend
g.add_legend()
g.set_axis_labels('Running VMs', 'Hosts')
g.set_titles(col_template='Cluster Type: {col_name}')

# Display the plot
plt.show()

print(df_crh['cluster'].dtype)  #

df_crh['cluster'] = df_crh['cluster'].astype('category')
