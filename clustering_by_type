g = sns.FacetGrid(df_crh, col='cluster_type', col_wrap=3, height=4)

# Map the scatter plot to the grid
g.map(sns.scatterplot, 'RunningVMs', 'Hosts', hue='cluster', palette='tab10', s=100)

# Add titles and labels
g.add_legend()
g.set_axis_labels('Running VMs', 'Hosts')
g.set_titles(col_template='Cluster Type: {col_name}')

# Display the plots
plt.show()
